<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson"
    xmlns:f="/lib/form">

    <f:entry field="masterScript" title="Master start script">    
        <f:textarea codemirror-mode="shell"
            codemirror-config="mode: 'text/x-sh', lineNumbers: true, matchBrackets: true, onBlur: function(editor){editor.save()}" />
    </f:entry>
    <f:entry field="slaveScript" title="Slave start script">
        <f:textarea codemirror-mode="shell"
            codemirror-config="mode: 'text/x-sh', lineNumbers: true, matchBrackets: true, onBlur: function(editor){editor.save()}" /> 
    </f:entry>

</j:jelly>
